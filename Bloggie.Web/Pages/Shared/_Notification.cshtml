@using Bloggie.Web.Enums
@using Bloggie.Web.Models.ViewModels
@{
    var notificationObj = ViewData["Notification"];
    if (notificationObj != null)
    {
        var notification = (Notification)notificationObj;
        var notificationClass = "";
        switch (notification.Type)
        {
            case NotificationType.Success:
                notificationClass = "alert-success";
                break;
            case NotificationType.Error:
                notificationClass = "alert-danger";
                break;
            case NotificationType.Info:
                notificationClass = "alert-secondary";
                break;
        }

        <div class="container mb-5">
            <div class="alert @notificationClass alert-dismissible fade show mb-5" role="alert">
                @Html.Raw(notification.Message)
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}