@page
@model Bloggie.Web.Pages.IndexModel
@{
ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the AI Blogging Assistant</h1>
    <p>Ask about blogging recommendations, and get friendly advice!</p>
</div>

<div class="chat-container">
    <div id="chat-box" class="chat-box">
        @if (Model.ChatMessages != null)
        {
        foreach (var message in Model.ChatMessages)
        {
        <div class="message @(message.IsUser ? "user-message" : "ai-message")">
            <strong>@(message.IsUser ? "You" : "AI Assistant"):</strong> @message.Content
        </div>
        }
        }
    </div>

    <form method="post">
        <div class="input-group mt-3">
            <input asp-for="UserMessage" class="form-control" placeholder="Type your message here..." />
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>

@section Scripts {
<style>
    .chat-container {
        max-width: 800px;
        margin: 0 auto;
    }
    .chat-box {
        border: 1px;
        padding: 10px;
        height: 800px;
        overflow-y: auto;
    }
    .message {
        margin-bottom: 10px;
    }
    .user-message {
        text-align: right;
        color: blue;
    }
    .ai-message {
        text-align: left;
        color: green;
    }
</style>
}
