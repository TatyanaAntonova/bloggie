@page
@model Bloggie.Web.Pages.Login

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            
            <h1 class="mt-5 mb-3 h3">Register</h1>

            <partial name="Shared/_Notification"/>
            
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">User name</label>
                    <input class="form-control" type="text" asp-for="LoginViewModel.Username"/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="password" asp-for="LoginViewModel.Password"/>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn bg-dark text-light">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
